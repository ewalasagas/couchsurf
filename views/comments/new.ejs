<%- include("../partials/header") %>

<div class="container">

		<h1>Add New Comment to <%= couch.name %></h1>
			<div class="form-group row" style="width: 30%; margin: 0; auto;">
				<form action="/couches/<%= couch._id %>/comments" method="POST">
					<div class="form-group">
						<textarea class="form-control" rows="4" cols="50" type="text" name="comment[text]" placeholder="leave a review"></textarea>
					</div>					
					<div class="form-group">
						<button class="btn btn-lg btn-success btn-block">Submit!</button>
					</div>
						
				</form>
			</div>
		

		<a href="/couches">Back</a>

</div>


<%- include("../partials/footer") %>