<%- include("../partials/header") %>

<div class="container">

		<h1>Edit Comment</h1>
			<div class="form-group row" style="width: 30%; margin: 0; auto;">
				<form action="/couches/<%= couch_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
					</div>					
					<div class="form-group">
						<button class="btn btn-lg btn-success btn-block">Submit!</button>
					</div>
						
				</form>
			</div>
		

		<a href="/couches">Back</a>

</div>


