<%- include("../partials/header") %>

<div class="container">

		<h1>Edit <%= couch.name %></h1>
			<div class="form-group row" style="width: 30%; margin: 0; auto;">
				<form action="/counches/<%= couch._id %>?_method=PUT" method="POST">
				
					<div class="form-group">
						<input class="form-control" type="text" name="couch[name]" placeholder="name" value="<%= couch.name %>">
					</div>
					
					<div class="form-group">
						<input class="form-control" type="number" name="couch[price]" value="<%= couch.price %>" min="0.01" step="0.01">
					</div>
					
					<div class="form-group">
						<input class="form-control" type="text" name="couch[image]" placeholder="image url" value="<%= couch.image %>">
					</div>
					
					<div class="form-group">
						<input class="form-control" type="text" name="couch[description]" placeholder="description" value="<%= couch.description %>">
					</div>
					
				<!--	<div class="form-group">
						<input class="form-control" type="text" name="location" id="location" value="<%= couch.location %>">
					</div>
					-->
					<div class="form-group">
						<button class="btn btn-lg btn-success btn-block">Submit!</button>
					</div>
						
				</form>
			</div>
		

		<a href="/couches">Back</a>

</div>


<%- include("../partials/footer") %>