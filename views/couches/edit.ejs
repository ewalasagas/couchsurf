<%- include("../partials/header") %>

<div class="container" id="create_couch">

		<h1 style="text-align: center; font-family: 'Amatic SC'; font-weight: 5px; font-size: 60px;">
			<i class="em em-pencil2" aria-role="presentation" aria-label="PENCIL"></i>
			Edit <%= couch.name %></h1>
			<div class="form-group" style="width: 100%; margin: 0; auto;">
			<form action="/couches/<%= couch._id %>?_method=PUT" method="POST">

				<div class="form-group" style="width: 50%;">
					<label>COUCH NAME:</label>
					<div class="input-group-append">
						<span class="input-group-text"><i class=""></i></span>
						<input class="form-control" type="text" name="couch[name]" placeholder="name" value="<%= couch.name %>">
					</div>
				</div>

				<label>PRICE PER DAY:</label>
				<div class="form-group" style="width: 30%;">
					<div class="input-group-append">
						<span class="input-group-text"><i class=""></i></span>
						<input class="form-control" type="number" name="couch[price]" value="<%= couch.price %>" min="0.01" step="0.01">
					</div>
				</div>

				<div class="form-group">
					<label>URL IMAGE:</label>
					<div class="input-group-append">
						<span class="input-group-text"><i class=""></i></span>
						<input class="form-control" type="text" name="couch[image]" placeholder="image url" value="<%= couch.image %>">
					</div>
				</div>

				<div class="form-group">
					<label>DESCRIPTION OF PLACE:</label>
					<div class="input-group-append">
						<span class="input-group-text"><i class=""></i></span>
						<!-- <input class="form-control" type="text" name="description" placeholder="description"> -->
						<textarea class="form-control" type="textarea" name="couch[description]" placeholder="description" style="height: 300px;"><%= couch.description %>
						</textarea>
					</div>
				</div>

				<!-- <div class="form-group">
						<input class="form-control" type="text" name="location" id="location" value="<%= couch.location %>">
					</div>
					-->
				<div class="form-group">
					<button class="btn btn-success">Save</button>
					<a href="/couches" style="float: right; color: #33a427">Back</a>
				</div>
			</form>
		</div>
</div>

<%- include("../partials/footer") %>